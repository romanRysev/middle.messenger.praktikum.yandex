<div class="profile-container">
  <a
    href="/chat"
    class="profile-container__back-link"
    id="profile-container__back-link"
  ><aside class="back-to-chat"><img
        class="back-to-chat__icon"
        src="{{backIconUrl}}"
        alt="back to chats"
      /></aside></a>
  <section class="profile container_align-center">
    {{{avatar}}}
    <h1 class="profile__title">{{firstName}}</h1>
    <p>Email: {{email}}</p>
    <p>Login: {{login}}</p>
    <p>First name: {{firstName}}</p>
    <p>Last name: {{lastName}}</p>
    <p>Display name: {{displayName}}</p>
    <p>Phone: {{phone}}</p>
    {{{profileEditLink}}}
    {{{passwordLink}}}
    {{{button}}}
  </section>
</div>