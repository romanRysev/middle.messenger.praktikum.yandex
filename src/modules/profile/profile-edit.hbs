<section class="profile-edit card">
  <form class="profile-edit__form card__form" name="profile">
    <h1 class="profile-edit__title card__title">Edit your profile:</h1>
    {{> avatar class="profile-edit__avatar" url=avatarUrl height="130" width="130"}}
    {{>input
      class="profile-edit__form-input"
      type="email"
      placeholder="email"
      name="email"
      errorClass="profile-edit__email-error form-error"
    }}
    {{>input
      class="profile-edit__form-input"
      type="text"
      placeholder="login"
      name="login"
      errorClass="profile-edit__login-error form-error"
    }}
    {{>input
      class="profile-edit__form-input"
      type="text"
      placeholder="first name"
      name="first_name"
      errorClass="profile-edit__first-name-error form-error"
    }}
    {{>input
      class="profile-edit__form-input"
      type="text"
      placeholder="second name"
      name="second_name"
      errorClass="profile-edit__second-name-error form-error"
    }}
    {{>input
      class="profile-edit__form-input"
      type="text"
      placeholder="display name"
      name="display_name"
      errorClass="profile-edit__second-name-error form-error"
    }}
    {{>input
      class="profile-edit__form-input"
      type="phone"
      placeholder="phone"
      name="phone"
      errorClass="profile-edit__phone-error form-error"
    }}
  </form>
  {{> button text="Save" class="profile-edit__button card__button"}}
</section>